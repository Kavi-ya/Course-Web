{
  "name": "SliitScope",
  "description": "A browser extension to enhance the SLIIT Courseweb experience.",
  "version": "2.0",
  "manifest_version": 3,
  "host_permissions": ["https://courseweb.sliit.lk/*"],
  "permissions": ["storage"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/64.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://courseweb.sliit.lk/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_title": "SliitScope",
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon32.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "kavindusahansilva@gmail.com",
      "strict_min_version": "115.0"
    }
  }
}
